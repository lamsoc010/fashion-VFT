                    <!-- _______________Doanh thu_____________________ -->
                    <div class="ad-content-items m-2 px-2 py-5 bg-white">
                        <div class="ad-content-title mb-3 text-primary">
                            <h4>Doanh thu cửa hàng tháng 7</h4>
                        </div>

                        <div class="text-center">

                            <canvas id="frame_canvas" width=500 height=300>
                           
                        </canvas>
                        </div>
                    </div>

                    <!-- _______________users_____________________ -->
                    <div class=" ad-content-items m-2 px-2 py-5 bg-white">
                        <div class="ad-content-title mb-3 text-primary">
                            <h4>Danh sách tài khoản khách hàng</h4>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered ">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col">#</th>
                                        <th class="text-center" scope="col">Tài khoản</th>
                                        <th class="text-center" scope="col">Email</th>
                                        <th class="text-center" scope="col">Mật khẩu</th>
                                        <th class="text-center" scope="col">SĐT</th>
                                        <th class="text-center" scope="col">Địa chỉ</th>
                                        <th class="text-center" scope="col">Note</th>

                                    </tr>
                                </thead>

                                <tbody id="list-user">
                                    <!-- render -->
                                </tbody>

                            </table>
                        </div>
                    </div>

                    <!-- _______________products_____________________ -->

                    <div class="ad-content-items m-2 px-2 py-5 bg-white active">

                        <div class="ad-content-title mb-3 text-primary">
                            <h4>Danh sách sản phẩm</h4>
                        </div>

                        <!-- ________________________________ -->
                        <div class="mb-3 d-flex justify-content-end">
                            <div class="col-md-3">
                                <select onchange="mySort(this)" class="form-select" aria-label="Default select example">
                                    <option  value="0" class="text-center">------ Lọc ------</option>
                                    <option  value="1">Giá từ thấp đến cao</option>
                                    <option  value="2">Giá từ cao đến thấp</option>
                                    <option  value="vegetable">Rau củ sạch</option>
                                    <option  value="fruit">Hoa quả</option>
                                    <option  value="dryP">Thực phẩm khô</option>
                               </select>
                            </div>
                        </div>


                        <!-- ______________________________-- -->
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col">#</th>
                                        <th class="text-center" scope="col">Ảnh</th>
                                        <th class="text-center" scope="col">Tên sản phẩm</th>
                                        <th class="text-center" scope="col">Loại sản phẩm</th>
                                        <th class="text-center" scope="col">Giá</th>
                                        <th class="text-center" scope="col">Mô tả</th>
                                        <th class="text-center" scope="col">Note</th>

                                    </tr>
                                </thead>

                                <tbody id="list-product">
                                    <!-- render -->
                                    <tr class="product-item product-item-" name="">
                                        <th class="text-center stt-product"></th>
                                        <td class="text-center ">
                                            <img class="img-thumbnail" src=""></img>
                                        </td>
                                        <td class="name-product text-center text-primary"></td>
                                        <td class="name-product text-center text-primary"></td>
                                        <td class="text-center"></td>
                                        <td class="price-product text-center text-danger"></td>
                                        <th class="text-center">
                                                <div  class="btnProduct-click-${product.id} btn-group " role="group">
                                                <a type="button" onclick="update('')" class="btn btn-info text-white">Update</a>
                                                </div>
                                                <div class="btnProduct-delete-${product.id} btn-group" role="group">
                                                <a href="/admin/product/delete/" type="button" class="btn btn-danger">Xóa</a>
                                                </div>
                                        </th>
                                    </tr>
                                </tbody>

                            </table>
                        </div>

                        <div class="add-product">

                            <h4 class="text-primary  my-3">Thêm sản phẩm</h4>


                            <form id="form-addproduct" method="POST" action="/store/product" enctype="multipart/form-data">

                                <div class="mb-3 ">
                                    <div class="d-flex">
                                        <label class="col-md-2 fw-bold col-form-label">Tên sản phẩm:</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" name="name" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 ">
                                    <div class="d-flex">
                                        <label class="col-md-2 fw-bold col-form-label">Loại sản phẩm:</label>
                                        <div class="col-md-6">
                                            <select id="type-product" name="type" class="form-select ">
                                                <option value="chairs" selected>Chairs</option>
                                                <option value="beds">Beds</option>
                                                <option value="accesories">Accesories</option>
                                                <option value="furniture">Furniture</option>
                                                <option value="homedemo">Home Demo</option>
                                               
                                              </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 ">
                                    <div class="d-flex">
                                        <label class="col-md-2 fw-bold col-form-label">Giá:</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" name="price" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex">
                                        <label class="col-md-2 fw-bold col-form-label">Mô tả</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" name="description" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex">
                                        <label class="col-md-2 fw-bold col-form-label">Ảnh sản phẩm:</label>
                                        <div class="col-md-6">
                                            <input type="file" class="form-control" name="image" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="text-center me-5">
                                        <button type="submit" class="create btn btn-primary me-5">Thêm sản phẩm</button>
                                        <button type="submit" class="update btn btn-primary me-5">Sửa sản phẩm</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- _______________oder-infor_____________________ -->

                    <div class="ad-content-items m-2 px-2 py-5 bg-white">
                        <div class="ad-content-title mb-3 text-primary">
                            <h4>Danh sách đơn đặt hàng</h4>
                        </div>

                        <div class="table-responsive" id="list-oder">


                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col">#</th>
                                        <th class="text-center" scope="col">Mã đơn</th>
                                        <th class="text-center" scope="col">Khách hàng</th>
                                        <th class="text-center" scope="col">Địa chỉ</th>
                                        <th class="text-center" scope="col">Thời gian</th>
                                        <th class="text-center" scope="col">Note</th>

                                    </tr>
                                </thead>

                                <tbody id="list-inforUser-oder">
                                    <!-- render -->
                                    
                                </tbody>

                            </table>
                        </div>

                        <div id="detail-oder">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Sản phẩm</th>
                                            <th scope="col">Phân loại</th>
                                            <th scope="col">Đơn giá</th>
                                            <th scope="col" class="text-center">Số lượng(kg)</th>
                                            <th scope="col">Thành tiền</th>

                                        </tr>
                                    </thead>

                                    <tbody id="oder-product">
                                        <!-- render -->
                                        
                                    </tbody>

                                </table>
                            </div>

                            <div class="table-responsive d-flex justify-content-center my-3">
                                <table>
                                    <tbody id="inforUser-oder">
                                        <!-- render -->
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>

                    <!-- _______________comments_____________________ -->

