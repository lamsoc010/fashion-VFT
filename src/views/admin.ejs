                <!-- ____________________________ -->
                <div class="col-md-10 ad-content p-0">
                    <!-- ___________________________________ -->
                    <div class=" ad-content-header d-flex align-items-center justify-content-between px-3">
                        <form class="navbar-search d-flex col-6 ">
                            <input id="search-input" onkeyup="myFilter()" class="form-control btn-search" type="search" placeholder="Tìm kiếm" aria-label="Search">
